// معاذ القرني
// Smart Methods
// Task 1

// C++ code
#include <Servo.h>

// I have to put the pins that i connected with the servoes
Servo servo_9;

Servo servo_10;

Servo servo_11;

Servo servo_12;

Servo servo_13;

void setup()
{
  servo_9.attach(9, 500, 2500);

  servo_10.attach(10, 500, 2500);

  servo_11.attach(11, 500, 2500);

  servo_12.attach(12, 500, 2500);

  servo_13.attach(13, 500, 2500);

}

void loop()
{
  // I want it from 0 to 90 degree, so:
  servo_9.write(90);
  delay(1000); // Wait for 1000 millisecond(s)
  servo_10.write(90);
  delay(1000); // Wait for 1000 millisecond(s)
  servo_11.write(90);
  delay(1000); // Wait for 1000 millisecond(s)
  servo_12.write(90);
  delay(1000); // Wait for 1000 millisecond(s)
  servo_13.write(90);
}
